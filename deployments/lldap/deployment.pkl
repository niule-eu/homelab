import "package://pkg.pkl-lang.org/pkl-k8s/k8s@1.2.1#/K8sResource.pkl"
import "package://pkg.pkl-lang.org/pkl-k8s/k8s@1.2.1#/api/apps/v1/Deployment.pkl"

resources: Listing<K8sResource> = new {
  new Deployment {
    metadata {
      name = "lldap"
    }
    spec {
      replicas = 1
      selector {
        matchLabels {
          ["app"] = "lldap"
        }
      }
      strategy {
        type = "Recreate"
      }
      template {
        metadata {
          labels {
            ["app"] = "lldap"
          }
          annotations {
            ["lldap"] = "https://github.com/lldap/lldap:latest-alpine-rootless"
          }
        }
        spec {
          containers {
            new {
              name = "lldap"
              envFrom {
                new {
                  configMapRef {
                    name = "lldap-env"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

output {
  value = resources
  renderer = (K8sResource.output.renderer as YamlRenderer) {
    isStream = true
  }
}